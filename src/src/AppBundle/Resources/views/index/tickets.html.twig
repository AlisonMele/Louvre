        <h1>ETAPE 2 : Complétez les coordonnées des visiteurs</h1>

         <form action='{{ path('showtickets') }}' method='POST'>
           {{ form_errors(form) }}
 

            <div>
                 {{ form_label(form.visit, "Date de la visite") }}
                 {{ form_errors(form.visit) }}
                 {{ form_widget(form.visit) }}
            </div>
            <div>
                 {{ form_label(form.typeticket, "Type de ticket") }}
                 {{ form_errors(form.typeticket) }}
                 {{ form_widget(form.typeticket) }}
            </div>
            <div>
                 {{ form_label(form.quantity, "Nombre de billets") }}
                 {{ form_errors(form.quantity) }}
                 {{ form_widget(form.quantity) }}
            </div>
            <div>
                 {{ form_label(form.name, "Pénnom") }}
                 {{ form_errors(form.name) }}
                 {{ form_widget(form.name) }}
            </div>
            <div>
                 {{ form_label(form.surname, "Nom") }}
                 {{ form_errors(form.surname) }}
                 {{ form_widget(form.surname) }}
            </div>
            <div>
                 {{ form_label(form.email, "Votre email") }}
                 {{ form_errors(form.email) }}
                 {{ form_widget(form.email) }}
            </div>

            {% for ticket in form.tickets %}               
            <div>
                 {{ form_label(form.tickets, "Compléter les informations visiteurs") }}
                 {{ form_errors(form.tickets) }}
                 {{ form_widget(form.tickets) }}
            </div>      
            {% endfor %}


            <div>
            <button type="submit" name="Valider coordonnées visiteur"  value="enregistrer"  class="btn btn-primary">Valider coordonnées visiteur</button> 
            </div>
         </form>

    

