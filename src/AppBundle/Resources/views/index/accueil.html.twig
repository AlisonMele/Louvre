on value="2019">2019</option><option value="2020">2020</option><option value="2021">2021</option><option value="2022">2022</option><option value="2023">2023</option></select></div>

            </div>

            <div>
                <label for="appbundle_sale_visit" class="form-control-label required">Date de la visite</label>
                <input type="date" id="appbundle_sale_visit" name="appbundle_sale[visit]" required="required" class="form-control">

                    <script type="text/javascript">
                       function DisableTuesday(date) {
                            var day = date.getDay();
                             // If day == 2 then it is Tuesday
                             if (day === 2) {
                             return [false] ; 
                             } else { 
                             return [true] ;
                             } 
                            }
                          $(document).ready(function(){

                                $('#appbundle_sale_visit').datepicker({
                                    format: 'dd/mm/yyyy',
                                    minDate: 0,
                                    maxDate: 365,
                                    todayHighlight: true,
                                    beforeShowDay: DisableTuesday
                                });
                        });
                    </script>

            </div>

            <div>
                <label class="form-control-label required" for="appbundle_sale_typeticket">Type de ticket</label>
                <select id="appbundle_sale_typeticket" name="appbundle_sale[typeticket]" class="form-control"><option value="1">Journée</option><option value="0">Demi-journée</option></select>

            </div>
            <div>
